<Window x:Class="DOF5RobotControl_GUI.ManualControlWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DOF5RobotControl_GUI" d:DataContext="{d:DesignInstance Type=local:ManualControlData}"
        mc:Ignorable="d"
        KeyDown="Window_KeyDown"
        KeyUp="Window_KeyUp"
        Title="ManualControlWindow" Height="720" Width="1280"
        FontSize="16">
    <Window.Resources>
        <local:SpeedLevelConverter x:Key="SpeedLevelConverter"/>
        <local:GamepadStatusConverter x:Key="GamepadStatusConverter"/>
    </Window.Resources>
    <DockPanel Margin="8">
        <StatusBar DockPanel.Dock="Bottom">
            <StatusBarItem>
                <StackPanel Orientation="Horizontal">
                    <TextBlock>手柄连接状态：</TextBlock>
                    <TextBlock Text="{Binding GamepadStatus, Converter={StaticResource GamepadStatusConverter}}"/>
                </StackPanel>
            </StatusBarItem>
            <Separator/>
            <StatusBarItem>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="速度模式："/>
                    <TextBlock Text="{Binding SpeedMode, Converter={StaticResource SpeedLevelConverter}}"/>
                </StackPanel>
            </StatusBarItem>
        </StatusBar>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <GroupBox Header="Camera 1" Grid.Column="0">
                <Image x:Name="FrameImage"></Image>
            </GroupBox>
            <GroupBox Header="Camera 2" Grid.Column="1">
                <TextBlock Text="Hello, this is the camera2!" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </GroupBox>
        </Grid>

    </DockPanel>
</Window>
